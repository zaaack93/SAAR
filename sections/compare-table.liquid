                "default": "checklist",
                "options": [
                  { "value": "checklist", "label": "Check" },
                  { "value": "uncheck", "label": "Uncheck" }
                ]
              },
              {
                "type": "select",
                "id": "competition3",
                "label": "Column icon 3",
                "default": "checklist",
                "options": [
                  { "value": "checklist", "label": "Check" },
                  { "value": "uncheck", "label": "Uncheck" }
