      }
    ],
    "blocks": [
        {
            "type": "repeatable",
            "name": "Comparison Item",
            "settings": [
              {
                "type": "text",
                "label": "Comparison Item",
                "id": "comparison_item"
              },
              {
                "type": "select",
                "id": "competition1",
                "label": "Column icon 1",
                "default": "checklist",
                "options": [
                  { "value": "checklist", "label": "Check" },
                  { "value": "uncheck", "label": "Uncheck" }
                ]
